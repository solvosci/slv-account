<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_move_form_inherit" model="ir.ui.view">
        <field name="name">account.move.form (Ref Mandatory)</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_reference']" position="attributes">
                <attribute name="attrs">{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))], 'readonly': [('state', '!=', 'draft')], 'required': [('move_type', 'in', ('in_invoice', 'in_refund'))]}</attribute>
            </xpath>
        </field>
    </record>

</odoo>
