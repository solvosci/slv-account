<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">
            account.move.form (in account_move_partner_category)
        </field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="groups_id" eval="[(4, ref('base.group_user'))]" />
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="partner_category_count" invisible="1"/>
                <field
                    string="Categories"
                    name="partner_category_ids"
                    widget="many2many_tags"
                    options="{'color_field': 'color'}"
                    attrs="{'invisible': [('partner_category_count','=',0)]}"
                />
            </field>
        </field>
    </record>
    <record id="view_invoice_tree" model="ir.ui.view">
        <field name="name">
            account.invoice.tree (in account_move_partner_category)
        </field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree" />
        <field name="groups_id" eval="[(4, ref('base.group_user'))]" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_partner_display_name'][2]" position="after">
                <field
                    name="partner_category_ids"
                    string="Categories"
                    widget="many2many_tags"
                    options="{'color_field': 'color'}"
                    optional="show"
                />
            </xpath>
        </field>
    </record>
    <record id="view_account_invoice_filter" model="ir.ui.view">
        <field name="name">
            account.invoice.select (in account_move_partner_category)
        </field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter" />
        <field name="groups_id" eval="[(4, ref('base.group_user'))]" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field
                    name="partner_category_ids"
                    string="Partner Category"
                />
            </xpath>
            <xpath expr="//filter[@name='salesperson']" position="before">
                <filter
                    string="Partner"
                    name="partner_id_groupby"
                    context="{'group_by':'partner_id'}"
                />
                <filter
                    string="Partner Categories"
                    name="partner_categories_groupby"
                    context="{'group_by':'partner_categories'}"
                />
            </xpath>
        </field>
    </record>
</odoo>
