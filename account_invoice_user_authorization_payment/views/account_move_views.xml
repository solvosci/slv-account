<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="user_authorization_payment_tree" model="ir.ui.view">
        <field name="name">account.move.tree (User Authorization Payment)</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_in_invoice_tree"/>
        <field name="groups_id" eval="[(4, ref('account.group_account_user'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="create_uid" />
            </xpath>
        </field>
    </record>

    <record id="user_authorization_payment_form" model="ir.ui.view">
        <field name="name">account.move.form (User Authorization Payment)</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="groups_id" eval="[(4, ref('account.group_account_user'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//group//field[@name='partner_bank_id']" position="after">
                <field name="user_authorization_payment" />
            </xpath>
        </field>
    </record>

    <record id="user_authorization_payment_search" model="ir.ui.view">
        <field name="name">account.move.search (User Authorization Payment)</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="groups_id" eval="[(4, ref('account.group_account_user'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//search/group/filter[@name='preferred_payment_method']" position="after">
                <filter name="user_authorization_payment" context="{'group_by':'user_authorization_payment'}" />
            </xpath>
        </field>
    </record>

</odoo>
