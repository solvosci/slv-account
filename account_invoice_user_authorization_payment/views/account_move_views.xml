<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="user_authorization_payment_tree" model="ir.ui.view">
        <field name="name">account.move.tree (User Authorization Customer Payment)</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_in_invoice_tree"/>
        <field name="groups_id" eval="[
            (4, ref('account_invoice_user_authorization_payment.group_user_payment'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="create_uid" widget="many2one_avatar_user" optional="show" />
            </xpath>
            <xpath expr="//field[@name='create_uid']" position="after">
                <field name="user_authorization_payment" widget="many2one_avatar_user" optional="show" attrs="{'invisible': [('move_type', 'not in', ('in_invoice', 'out_refund', 'out_receipt'))]}"/>
            </xpath>
        </field>
    </record>
 
    <record id="user_authorization_payment_form" model="ir.ui.view">
        <field name="name">account.move.form (User Authorization Customer Payment)</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="groups_id" eval="[
            (4, ref('account_invoice_user_authorization_payment.group_user_payment'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@id='header_left_group']//field[@name='partner_id']" position="after">
                <field name="user_authorization_payment" widget="many2one_avatar_user" attrs="{'invisible': [('move_type', 'not in', ('in_invoice', 'out_refund', 'out_receipt'))]}"/>
            </xpath>
        </field>
    </record>

    <record id="user_authorization_payment_search" model="ir.ui.view">
        <field name="name">account.move.search (User Authorization Payment)</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="groups_id" eval="[
            (4, ref('account_invoice_user_authorization_payment.group_user_payment'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//search//field[@name='invoice_user_id']" position="after">
                <field name="create_uid" string="Create by"/>
                <field name="user_authorization_payment" string="User Authorization Payment"/>
            </xpath>
            <xpath expr="//group/filter[@name='salesperson']" position="after">
                <filter name="create_uid" context="{'group_by':'create_uid'}"/>
            </xpath>
            <xpath expr="//group/filter[@name='salesperson']" position="after">
                <filter name="user_authorization_payment" context="{'group_by':'user_authorization_payment'}"/>
            </xpath>
        </field>
    </record>
    
</odoo>
