<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_dms_file_decline_account_move_wizard" model="ir.ui.view">
        <field name="name">dms.file.decline.account.move.wizard</field>
        <field name="model">dms.file.decline.account.move.wizard</field>
        <field name="arch" type="xml"> 
            <form string="Decline Purchase Invoice">
                <sheet>
                    <group>
                        <field name="dms_file_id" invisible="1"/>
                        <field name="reason" />
                    </group>
                </sheet>
                <footer>
                    <button string="Decline" name="decline_account_move" type="object" class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

</odoo>
