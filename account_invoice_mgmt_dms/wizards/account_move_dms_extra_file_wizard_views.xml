<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_move_dms_extra_file_wizard" model="ir.ui.view">
        <field name="name">account.move.dms.extra.file.wizard</field>
        <field name="model">account.move.dms.extra.file.wizard</field>
        <field name="arch" type="xml"> 
            <form string="Add Extra Documents">
                <sheet>
                    <group>
                        <field name="account_move_id" invisible="1" readonly="True"/>
                        <field name="dms_file_name" invisible="1"/>
                        <field name="dms_file" filename="dms_file_name"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Save" name="save_account_move_dms_extra" type="object" class="btn-primary" />
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

</odoo>
