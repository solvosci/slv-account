<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_move_form" model="ir.ui.view">
            <field name="name">account_payment_line_create.form (in account_payment_order_bill_date)</field>
            <field name="model">account.payment.line.create</field>
            <field
                name="inherit_id"
                ref="account_payment_order.account_payment_line_create_form"
            />
            <field name="arch" type="xml">
                <xpath
                    expr="//field[@name='move_line_ids']/tree/field[@name='date']"
                    position="attributes"
                >
                    <attribute name="optional">show</attribute>
                </xpath>
                <xpath
                    expr="//field[@name='move_line_ids']/tree/field[@name='date']"
                    position="after"
                >
                    <field
                        name="invoice_date"
                        optional="hide"
                        string="Inv./Bill Date"
                    />
                </xpath>
            </field>
        </record>
    </data>
</odoo>
